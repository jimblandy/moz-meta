#!/usr/bin/env bash

set -eu

meta=/home/jimb/moz/meta
cd $(moz findsrctop)

if [ -z "${1:+set}" ]; then
    target=$(readlink .mozconfig)
    case "$target" in
        $meta/mozconfigs/*)
            basename "$target"
            ;;
        *)
            echo "Unrecognized .mozconfig link contents: $target" >&2
            exit 1
            ;;
    esac
    exit 0
fi

config=$meta/mozconfigs/$1
if ! [ -f "$config" ]; then
    echo "No such ~/moz/meta/mozconfigs file: $1" >&2
    exit 1
fi

rm -f .mozconfig
ln -s $config .mozconfig
